<Window x:Class="Exercise1.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="400" Width="525">
    <Grid>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Right" Command="{Binding exitCmd}" VerticalAlignment="Bottom" Margin="10" Width="75"/>
        <ListBox x:Name="listBoxLeft" ItemsSource="{Binding LeftList}" HorizontalAlignment="Left" Height="195" Margin="10" VerticalAlignment="Top" Width="100"/>
        <ListBox x:Name="listBoxRight" HorizontalAlignment="Right" Height="195" Margin="10" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>
